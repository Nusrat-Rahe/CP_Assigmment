#include<bits/stdc++.h>
using namespace std;
int vis[1000];
vector<int> v[1000];

void dfs(int node)
{
    vis[node] = 1;
    for(int child : v[node])
    {
        if(vis[child] == 0)
        {
            dfs(child);
        }
    }
}

int main()
{
    int V,E;
    cin>>V>>E;

    int x,y;
    for(int i=0;i<E;i++)
    {
        cin>>x>>y;
        v[x].push_back(y);
        v[y].push_back(x);
    }

    int components=0;
    for(int i=0;i<V;i++)
    {
        if(vis[i]==0)
        {
            dfs(i);
            components++;
        }
    }
    cout << components << endl;
return 0;
}

